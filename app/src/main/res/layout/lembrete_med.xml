<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_lembrete">


    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@mipmap/ic_launcher_round"
        android:id="@+id/img_med"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Nome medicamento"
            android:id="@+id/nome_med" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dosagem"
            android:id="@+id/dosagem_med"
            android:layout_below="@id/nome_med"/>
        <TextView
            android:layout_toRightOf="@id/dosagem_med"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo med"
            android:id="@+id/tipo_med"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/nome_med" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Administração med"
            android:id="@+id/adm_med"
            android:layout_below="@id/tipo_med"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"></RelativeLayout>
</LinearLayout>
